<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/assistant_imgIcon_size"
        android:layout_height="@dimen/assistant_imgIcon_size"
        android:layout_marginTop="@dimen/main_margin_4x"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txtDesc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="@dimen/assistant_desc_width"
        android:layout_height="@dimen/assistant_desc_height"
        android:layout_marginTop="@dimen/main_margin_4x"

        android:text="@string/assistant_assistantDescription"
        android:textSize="@dimen/main_textSize_3x"

        android:textColor="@color/white"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFinish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="@dimen/width_btnFinish"
        android:layout_height="@dimen/height_btnFinish"
        android:layout_marginEnd="@dimen/main_margin_2x"
        android:layout_marginBottom="@dimen/main_margin_2x"

        android:text="@string/assistant_btnFinish"

        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>